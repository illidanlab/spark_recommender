<jobList xmlns:recsys="Samsung Recsys">
	<jobEntry>
		<jobType>recommendation</jobType>
		<jobName>exp_test_20140522_20140525_fact_coldstart</jobName>
		<jobDesc>Test experiment from 20140522 to 20140525</jobDesc>
		<sparkContext>
			<master>local[4]</master>
		</sparkContext>
		<resourceLocation>
			<roviHq>data/ROVI/</roviHq>
			<watchTime>data/ACR/</watchTime>
      		<workspace>/Users/yin.zhou/Documents/workspace/learning_scala</workspace>
		</resourceLocation>
		<trainDates>
			<date>20140522</date>
			<date>20140523</date>
    	</trainDates>
	    <testDates>
	        <date>20140524</date>
	        <date>20140525</date>
	    </testDates>
		<features>		
			<feature>
				<type>factFeature</type>
				<name>nmf</name>
				<param>
					<rank>5</rank>
				</param>
				<param>
					<lambda>0.1</lambda>
				</param>
				<param>
					<numIter>10</numIter>
				</param>
			</feature>
	      <feature>
		        <type>itemFeature</type>
		        <name>genre</name>
		        <param>
		          <lang>en</lang>
		        </param>
	      </feature>
	      <feature>
		        <type>itemFeature</type>
		        <name>syn_tfidf</name>
		        <param>
		          <N>100</N>
		        </param>
	      </feature>
	      <feature>
		        <type>userFeature</type>
		        <name>genre</name>
	      </feature>
	      <feature>
		        <type>userFeature</type>
		        <name>syn_tfidf</name>
	      </feature>  
		</features>
		<dataSplit>
			<testingRatio>0.5</testingRatio>
			<validationRatio>0.1</validationRatio>
		</dataSplit>
    <models>
      <model>
        <type>score_reg</type>
        <name>fm_l2_reg</name>
        <param>
          <regParam>1.5</regParam>
          <minUFCoverage>0.1</minUFCoverage>
          <minIFCoverage>0.1</minIFCoverage>
          <numIterations>2</numIterations>
          <stepSize>0.0001</stepSize>
          <latentFactor>20</latentFactor>
        </param>
      </model>
    </models>
    <tests>
      <test>
        <type>futureNotColdstart</type>
        <name>NonColdstart</name>
        <param>
            <UserSampleSize>15000</UserSampleSize>
        </param>
        <metrics>
	      <metric>
            <type>mse</type>
            <name>MeanSquareError</name>
            <param>
              <key>val</key>
            </param>
	      </metric>
	      <metric>
            <type>rmse</type>
            <name>RootMeanSquareError</name>
            <param>
                <key>val</key>
            </param>
	      </metric>
	      <metric>
            <type>hr</type>
            <name>HitRate</name>
            <param>
                <key>val</key>
            </param>
	      </metric>
	    </metrics>
      </test>    
      <test>
         <type>futureColdItems</type>
         <name>ColdStartItems</name>
         <param>
             <UserSampleSize>15000</UserSampleSize>
         </param>
         <metrics>
           <metric>
               <type>cold_recall</type>
               <name>Cold_Item_Recall</name>
               <param>
                   <key>val</key>
               </param>
           </metric>
         </metrics>
      </test>      
      <test>
         <type>futureColdItems</type>
         <name>ColdStartItems</name>
         <param>
             <UserSampleSize>15000</UserSampleSize>
         </param>
         <metrics>
           <metric>
               <type>cold_recall</type>
               <name>Cold_Item_Recall</name>
               <param>
                   <key>val</key>
               </param>
           </metric>
         </metrics>
      </test>            
    </tests>
    <ensembles>
      <ensemble>
        <type>max</type>
        <param>
          <num>2</num>
        </param>
      </ensemble>
    </ensembles>    
	</jobEntry>
</jobList>
