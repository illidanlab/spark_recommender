<jobList xmlns:recsys="Samsung Recsys">
	<jobEntry>
		<jobType>recommendation</jobType>
		<jobName>exp_test_20140522_20140525_fmr</jobName>
		<jobDesc>Test experiment from 20140522 to 20140525</jobDesc>
		<sparkContext>
			<master>local[4]</master>
		</sparkContext>
		<resourceLocation>
			<roviHq>data/ROVI/</roviHq>
			<watchTime>data/ACR/</watchTime>
      <workspace>/tmp/vddil/recsys-spark</workspace>
		</resourceLocation>
		<trainDates>
			<date>20140522</date>
			<date>20140523</date>
    	</trainDates>
    	<testDates>
        	<date>20140524</date>
        	<date>20140525</date>
    	</testDates>
		<features>		
			<feature>
				<type>itemFeature</type>
				<name>genre</name>
				<param>
					<lang>en</lang>
				</param>
			</feature>	
			<feature>
				<type>userFeature</type>
				<name>genre</name>
			</feature>
		</features>
		<dataSplit>
			<testingRatio>0.2</testingRatio>
			<validationRatio>0.1</validationRatio>
		</dataSplit>
		<models>
			<model>
				<type>score_reg</type>
				<name>fm_l2_reg</name>
				<param>
					<regParam>1.5</regParam>
					<minUFCoverage>0.8</minUFCoverage>
					<minIFCoverage>0.8</minIFCoverage>
					<numIterations>1</numIterations>
					<stepSize>0.0001</stepSize>
				</param>
			</model>
		</models>
		<tests>
		  <test>
		      <type>futureNotColdstart</type>
		      <name>NonColdstart</name>
		      <param>
		          <key>val</key>
		      </param>
		  </test>
		</tests>
		<metrics>
		  <metric>
		      <type>mse</type>
		      <name>MeanSquareError</name>
		      <param>
		          <key>val</key>
		      </param>
		  </metric>
		  <metric>
              <type>rmse</type>
              <name>RootMeanSquareError</name>
              <param>
                  <key>val</key>
              </param>
          </metric>
          <metric>
              <type>hr</type>
              <name>HitRate</name>
              <param>
                  <UserSampleSize>3</UserSampleSize>
              </param>
          </metric>
		</metrics>
		<ensembles>
			<ensemble>
				<type>max</type>
				<param>
					<num>2</num>
				</param>
			</ensemble>
		</ensembles>
	</jobEntry>
</jobList>
