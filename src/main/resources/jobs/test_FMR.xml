<jobList xmlns:recsys="Samsung Recsys">
	<jobEntry>
		<jobType>recommendation</jobType>
		<jobName>exp_test_20140522_20140525_fmr</jobName>
		<jobDesc>Test experiment from 20140522 to 20140525</jobDesc>
		<sparkContext>
			<master>local[4]</master>
		</sparkContext>
		<resourceLocation>
			<roviHq>data/ROVI/</roviHq>
			<watchTime>data/ACR/</watchTime>
      		<workspace>/tmp/vddil/</workspace>
		</resourceLocation>
		<experimentalFeature>
			<exportPlainTextData>false</exportPlainTextData>
		</experimentalFeature>
		<trainDates>
			<date>20140522-20140524</date>
    	</trainDates>
    	<testDates>
        	<date>20140525</date>
    	</testDates>        
        <transformations>
        	<transformation>
        		<name>max</name>
        		<param>none</param>
			</transformation>        	
        </transformations>        
		<features>	
			<feature>
				<type>factFeature</type>
				<name>nmf</name>
				<param>
					<rank>15</rank>
					<lambda>0.1</lambda>
					<numIter>10</numIter>
					<regressionMethod>lasso</regressionMethod>					
				</param>
			</feature>			
			<feature>
				<type>itemFeature</type>
				<name>genre</name>
				<param>
					<lang>en</lang>
				</param>
				<!-- <processes>
                    <process>
                        <name>l2normalize</name>
                    </process>
                </processes> -->
			</feature>
			<feature>
				<type>itemFeature</type>
				<name>showTime</name>
				<param>
					<timeWindow>12</timeWindow>
				</param>
				<!-- <processes>
                    <process>
                        <name>l2normalize</name>
                    </process>
                </processes> -->
			</feature>
			<feature>
				<type>itemFeature</type>
				<name>channel</name>
				<!-- <processes>
					<process>
						<name>randomSelection</name>
						<param>
							<size>100</size>
						</param>
					</process>
					<process>
						<name>l2normalize</name>
					</process>
					<process>
						<name>dummy</name>
					</process>
				</processes> -->
			</feature>
			<feature>
		        <type>itemFeature</type>
		        <name>syn_tfidf</name>
		        <param>
		            <N>100</N>
		        </param>
		        <!-- <processes>
		            <process>
                        <name>l2normalize</name>
                    </process>
                    <process>
                        <name>dummy</name>
                    </process>
                </processes> -->
		    </feature>
			<feature>
				<type>userFeature</type>
				<name>genre</name>
			</feature>
			<feature>
				<type>userFeature</type>
				<name>showTime</name>
			</feature>
			<feature>
				<type>userFeature</type>
				<name>channel</name>
			</feature>
			<feature>
		        <type>userFeature</type>
		        <name>showTime</name>
		    </feature>
		</features>
		<dataSplit>
			<testingRatio>0.2</testingRatio>
			<validationRatio>0.1</validationRatio>
		</dataSplit>
		<models>
			<model>
				<type>score_reg</type>
				<name>fm_l2_reg</name>
				<param>
					<regParam>1.5</regParam>
					<minUFCoverage>0.1</minUFCoverage>
					<minIFCoverage>0.1</minIFCoverage>
					<numIterations>1</numIterations>
					<stepSize>0.0001</stepSize>
					<latentFactor>5</latentFactor>
				</param>
			</model>
		</models>
		<tests>
		  <test>
		      <type>futureNotColdstart</type>
		      <name>NonColdstart</name>
		      <param>
		          <UserSampleSize>3</UserSampleSize>
		      </param>
		      <metrics>
				  <metric>
				      <type>mse</type>
				      <name>MeanSquareError</name>
				      <param>
				          <key>val</key>
				      </param>
				  </metric>
				  <metric>
		              <type>rmse</type>
		              <name>RootMeanSquareError</name>
		              <param>
		                  <key>val</key>
		              </param>
		          </metric>
		          <metric>
		              <type>hr</type>
		              <name>HitRate</name>
		              <param>
		                  <key>val</key>
		              </param>
		          </metric>
			  </metrics>
		  </test>
		  <test>
             <type>futureColdItems</type>
	         <name>ColdStartItems</name>
	         <param>
	             <UserSampleSize>15000</UserSampleSize>
	         </param>
	         <metrics>
	           <metric>
	               <type>cold_recall</type>
	               <name>Cold_Item_Recall</name>
	               <param>
	                   <UserSampleSize>15000</UserSampleSize>
	               </param>
	           </metric>
	         </metrics>
	      </test>
		</tests>
		<ensembles>
			<ensemble>
				<type>max</type>
				<param>
					<num>2</num>
				</param>
			</ensemble>
		</ensembles>
	</jobEntry>
</jobList>
